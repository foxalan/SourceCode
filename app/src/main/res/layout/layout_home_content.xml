<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_daily_record"
        android:text="Daily record"
        android:onClick="onDailyRecord"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <Button
        android:layout_below="@id/bt_daily_record"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="onAopSingleClick"
        android:text="Aop SingleClick"
        app:layout_constraintBottom_toTopOf="@id/bt_daily_record"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</RelativeLayout>
